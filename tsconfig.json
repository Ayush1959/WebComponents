{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,

    "noEmitOnError": false,
    "esModuleInterop": false,
    "importHelpers": true,

    "incremental": true,
    "resolveJsonModule": true,
    "plugins": [{
      "name": "ts-lit-plugin",
      "strict": true
    }],
  },
  "ts-node": {
    "compilerOptions": {
      "module": "es2015",
      "moduleResolution": "node"
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}